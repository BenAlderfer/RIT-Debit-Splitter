<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- Main theme -->
    <style name="OrangeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColorPrimary">@color/black</item>        <!-- TextInputLayout text color -->
        <item name="android:editTextStyle">@style/orangeEditText</item>        <!-- EditText color -->
        <item name="android:windowBackground">@color/lightgrey</item>        <!-- background color -->
        <item name="android:textColor">@color/black</item>        <!-- TextView color -->
        <item name="android:textColorHighlight">@color/blueHighlight</item>        <!--  Highlight color -->
    </style>

    <style name="OrangeToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColorPrimary">@color/white</item>        <!-- activity name text color -->
        <item name="android:textColorSecondary">@color/white</item>        <!-- overflow text color -->
        <item name="android:background">@color/orangePrimary</item>        <!-- background color -->
        <item name="android:textColor">@color/white</item>        <!-- TextView color -->
        <item name="android:actionMenuTextColor">@color/orangePrimary</item>        <!-- Action button color -->
    </style>

    <style name="orangeEditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/orangePrimary</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/grey</item>
        <item name="colorAccent">@color/orangePrimary</item>
        <item name="colorControlNormal">@color/orangePrimary</item>
        <item name="colorControlActivated">@color/orangePrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Calendar pop up theme -->
    <style name="OrangeLightPopUp" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/orangePrimary</item>
        <item name="android:textColorPrimary">@color/black</item>        <!-- activity name text color -->
        <item name="android:windowBackground">@color/lightgrey</item>        <!-- background color -->
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="TableRowItemStyle">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Header">
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/orangePrimary</item>
    </style>

    <style name="LargeOrange">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/orangePrimary</item>
    </style>

    <style name="ColoredButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/orangePrimaryDark</item>
        <item name="colorButtonNormal">@color/orangePrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
