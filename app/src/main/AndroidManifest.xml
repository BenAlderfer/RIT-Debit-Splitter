<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alderferstudios.ritdiningplanner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BlueDark">
        <activity
            android:name="com.alderferstudios.ritdiningplanner.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/BlueDark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.alderferstudios.ritdiningplanner.CalendarDialog"
            android:theme="@style/BlueLightPopUp" />
        <activity
            android:name="com.alderferstudios.ritdiningplanner.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/BlueLight" />
        <activity
            android:name="com.alderferstudios.ritdiningplanner.HelpActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/BlueOverflow" />
        <activity
            android:name="com.alderferstudios.ritdiningplanner.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/BlueOverflow" />
    </application>

</manifest>
