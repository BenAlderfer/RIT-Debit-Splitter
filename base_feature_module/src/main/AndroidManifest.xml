<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alderferstudios.ritdebitsplitter">

    <!-- Some Chromebooks don't support touch. Although not essential,
         it's a good idea to explicitly include this declaration. -->
    <uses-feature android:name="android.hardware.touchscreen"
                                android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/OrangeTheme">
        <activity
            android:name="com.alderferstudios.ritdebitsplitter.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/OrangeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.alderferstudios.ritdebitsplitter.CalendarDialog"
            android:theme="@style/OrangeLightPopUp" />
        <activity
            android:name="com.alderferstudios.ritdebitsplitter.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/OrangeTheme" />
        <activity
            android:name="com.alderferstudios.ritdebitsplitter.HelpActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/OrangeTheme" />
        <activity
            android:name="com.alderferstudios.ritdebitsplitter.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/OrangeTheme" />
    </application>

</manifest>
