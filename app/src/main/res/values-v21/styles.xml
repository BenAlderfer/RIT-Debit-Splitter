<resources>>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- Main theme -->
    <style name="OrangeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorPrimary">@color/orangePrimary</item>        <!-- action bar -->
        <item name="android:colorPrimaryDark">@color/orangePrimaryDark</item>        <!-- status bar -->
        <item name="android:colorAccent">@color/orangePrimary</item>        <!-- checkboxes and text fields border-->
        <item name="android:textColorPrimary">@color/black</item>        <!-- TextInputLayout text color -->
        <item name="android:editTextStyle">@style/orangeEditText</item>        <!-- EditText color -->
        <item name="android:windowBackground">@color/lightgrey</item>        <!-- background color -->
        <item name="android:textColor">@color/black</item>        <!-- TextView color -->
        <item name="android:textColorHighlight">@color/blueHighlight</item>        <!--  Highlight color -->
        <item name="colorControlActivated">@color/orangePrimary</item>    <!-- Pressed Radio Button -->
        <item name="colorControlNormal">@color/orangePrimary</item>   <!-- Unpressed Radio Button -->
    </style>

    <style name="OrangeToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorPrimary">@color/orangePrimary</item>        <!-- action bar -->
        <item name="android:colorPrimaryDark">@color/orangePrimaryDark</item>        <!-- status bar -->
        <item name="android:textColorPrimary">@color/white</item>        <!-- activity name text color -->
        <item name="android:textColorSecondary">@color/white</item>        <!-- overflow text color -->
        <item name="android:background">@color/orangePrimary</item>        <!-- background color -->
        <item name="android:textColor">@color/white</item>        <!-- TextView color -->
        <item name="android:actionMenuTextColor">@color/orangePrimary</item>        <!-- Action button color -->
    </style>

    <!-- Calendar pop up theme -->
    <style name="OrangeLightPopUp" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/orangePrimary</item>
        <item name="android:textColorPrimary">@color/black</item>        <!-- activity name text color -->
        <item name="android:windowBackground">@color/lightgrey</item>        <!-- background color -->
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
